{
    "comments": {
        "lineComment": "'",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["(", ")"],
        ["[", "]"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "'", "close": "'", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["[", "]"],
        ["\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(?:Global\\s+Sub|Sub|Function|Global\\s+Structure|If|For|While|Do|Select\\s+Case)\\b",
            "end": "^\\s*(?:End\\s+(?:Sub|Function|Structure|If|Select)|Next|Wend|Loop)\\b"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}